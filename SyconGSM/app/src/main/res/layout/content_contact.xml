<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ConatctActivity"
    tools:showIn="@layout/activity_contact">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/dol_btn_back">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/contact"/>
            <com.nexzen.sycongsm.customfonts.MyTextView
                android:id="@+id/linkCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="(0233) 2312439"/>
            <com.nexzen.sycongsm.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:text="पत्ता :"/>
            <com.nexzen.sycongsm.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textAlignment="center"
                android:text="२१४, वसंतदादा औद्योगिक वसाहत, गव्हरमेंट I.T.I. जवळ, सांगली ४१६४१६."/>
            <com.nexzen.sycongsm.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textAlignment="center"
                android:text="Email - sanglisycon@gmail.com"/>
            <com.nexzen.sycongsm.customfonts.MyTextView
                android:id="@+id/linkWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#53dfff"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textAlignment="center"
                android:text="Website - http://syconagrocontrols.com"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>